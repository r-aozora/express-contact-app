<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Kontak</h2>

            <a href="/" class="btn btn-secondary btn-sm rounded-pill fw-medium">
                <i class="bi bi-arrow-left"></i>
                Kembali
            </a>

            <a href="/contact/create" class="btn btn-primary btn-sm rounded-pill fw-medium float-end mb-3">
                <i class="bi bi-plus"></i>
                Tambah Kontak
            </a>

            <% if (msg.length !== 0) { %>
                <div class="alert alert-success mt-3" role="alert">
                    <%= msg %>
                </div>
            <% } %>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama</th>
                        <th scope="col">Telepon</th>
                        <th scope="col">Email</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length === 0) { %>
                        <tr>
                            <td colspan="5">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Data kontak tidak masih kosong.
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    <% contacts.forEach((contact, i) => { %>
                        <tr>
                            <th scope="row"><%= i + 1 %></th>
                            <td><%= contact.nama %></td>
                            <td><%= contact.telepon %></td>
                            <td><%= contact.email %></td>
                            <td>
                                <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill">
                                    <i class="bi bi-info-circle"></i>
                                    Detail
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>